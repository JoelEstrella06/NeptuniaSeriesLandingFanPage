---
import Change from '../icons/Change.astro';

interface Props {
    human:string,
    megami:string,
}
const{human,megami}=Astro.props;
---
<div class="w-full grid grid-cols-1 sm:grid-cols-2 justify-items-center items-center overflow-hidden" x-data="{change:false}">
    <div class="relative overflow-hidden max-w-lg">
        <button class="bg-purple-950 p-3 m-2 z-20 absolute top-0 size-12 flex justify-center items-center rounded-full " @click="change=!change">
            <Change clases="text-purple-200"/>
        </button>
        <span></span>
        <figure class="max-w-lg">
            <img src={human} alt="human" class="w-full aspect__o riginal transition-all duration-300" :class="change?'brightness-0 translate-x-5':'brightness-100'">
        </figure>
        <figure class="max-w-lg transition-all duration-300 absolute bottom-0" :class="change?'z-10 right-0':'-z-10 right-10'">
            <img src={megami} alt="diosa" class="w-full aspect__o riginal transition-all duration-300" :class="change?'brightness-100':'brightness-0'">
        </figure>
    </div>
    <div class="px-2 py-1 text-xl w-full">
        <template x-if="!change">
            <slot name="normal-description"/>
        </template>
        <template x-if="change">
            <slot name="megami-description"/>
        </template>
    </div>
</div>
<style>
    .aspect__original{
        aspect-ratio: 375 / 448;
    }
</style>