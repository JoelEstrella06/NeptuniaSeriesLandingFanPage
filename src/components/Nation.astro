---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets'
import Parallax from './Parallax.astro';
interface Props {
    bg:string,
    nacion:string,
    titulo:string,
    href:string
}
const {nacion,titulo,href}= Astro.props;
const images=import.meta.glob<{default:ImageMetadata}>('/src/imgs/logos/*.{jpeh,jpg,png}')
/* en caso que no exista la imagen mostramos un mensaje de error */
if (!images[nacion]) throw new Error(`"${nacion}" No se encontr√≥ la imagen"`);

---
<Parallax textColor='white' fondo='/src/imgs/backgrounds/lastation_bg.jpg'>
    <div class="relative w-full p-3 flex items-center justify-center bg-black bg-opacity-65">
        <a href={href}>{titulo}</a>
        <Picture src={images[nacion]()} alt={titulo} loading='lazy'/>
    </div>
</Parallax>
