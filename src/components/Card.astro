---
interface Props {
	title: string;
	cover:string
}

const {title,cover } = Astro.props;
const tiempo = (Math.random() * 0.2+0.3).toFixed(1) + 's';
---

<div class="animacion relative block max-w-80 rounded-lg overflow-hidden border-2 border-blue-900">
	<figure class="w-full">
		<img src={cover} alt="entrega" class="w-full">
	</figure>
	<div class="sm:absolute top-full w-full sm:h-full bg-blue-900 text-blue-200 divide-y-2 sm:divide-y-4 divide-blue-500 max-sm:divide-opacity-50 sm:bg-opacity-80 flex flex-col justify-center items-center gap-1 transition-all duration-300 px-2 py-1">
		<h2 class="font-semibold text-lg sm:text-xl text-center">{title}</h2>
		<slot/>
	</div>
</div>
<style define:vars={{tiempo}}>
	div:hover > div{
		top: 0;
	}
	.animacion{
		animation-name: zoomIn;
		animation-duration: var(--tiempo);
	}
	@keyframes zoomIn{
		0%{
			transform: scale(0);
		}
		50%{
			transform: scale(1);
		}
		70%{
			transform: scale(0.7);
		}
		100%{
			transform: scale(1);
		}
	}
</style>
