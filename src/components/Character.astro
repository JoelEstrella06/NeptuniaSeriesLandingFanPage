---
import Change from '../icons/Change.astro';

interface Props {
    human:string,
    megami:string,
    nameHuman:string,
    nameMegami:string
}
const{human,megami,nameHuman,nameMegami}=Astro.props;
---
<div class="border-4 border-blue-900 bg-blue-800 bg-opacity-60 rounded-md max-w-80 overflow-hidden" x-data="{change:false}">
    <div class="relative overflow-hidden">
        <button class="bg-purple-950 p-3 m-2 z-20 absolute top-0 size-12 flex justify-center items-center rounded-full " @click="change=!change">
            <Change clases="text-purple-200"/>
        </button>
        <span></span>
        <figure class="max-w-72">
            <img src={human} alt="human" class="w-full transition-all duration-300" :class="change?'brightness-0 translate-x-5':'brightness-100'">
        </figure>
        <figure class="max-w-72 transition-all duration-300 absolute bottom-0" :class="change?'z-10 right-0':'-z-10 right-10'">
            <img src={megami} alt="diosa" class="w-full transition-all duration-300" :class="change?'brightness-100':'brightness-0'">
        </figure>
    </div>
    <div class="px-2 py-1 bg-blue-900 text-blue-200 text-center text-xl">
        <template x-if="!change">
            <strong>{nameHuman}</strong>
        </template>
        <template x-if="change">
            <strong>{nameMegami}</strong>
        </template>
    </div>
</div>